%nav.navbar.justify-content-between.shadow-sm.sticky-top.bg-white
  = link_to root_path, class: 'navbar-brand ml-3' do
    VisitLog
    = image_tag "logo.png", size: 45, class: 'mb-1'
  .mr-5.d-flex.justify-content-between
    - if user_signed_in?
      = link_to 'Courses', root_path, class: 'mr-3'
      .dropdown
        %a#dropdownMenuLink.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"}
          Account
        .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuLink"}
          = link_to 'Settings', edit_user_registration_path, class: 'dropdown-item'
          = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item'
    -else
      = link_to 'Sign in', new_user_session_path
      &emsp;&#8725;&emsp;
      = link_to 'Sign up', new_user_registration_path
